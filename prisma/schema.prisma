generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  password String?

  journals Journal[]
  itineraries Itinerary[]
  sessions Session[]
}

model Session {
  id String @id @default(cuid())
  
  // relation
  userId String
  user User @relation(fields: [userId], references: [id])
}

model Journal {
  id String @id @default(cuid())
  title String
  content String
  country String
  city String
  startDate DateTime
  endDate DateTime
  createdAt DateTime @default(now())
  isDeleted Boolean @default(false)
  totalExpense Decimal? // bener nggak ya decimal
  image String?
  
  // relation
  authorId String
  author User @relation(fields: [authorId], references: [id])
}

// SAMA PERSIS kayak journal, cuman beda di totalBudget
model Itinerary {
  id String @id @default(cuid())
  title String
  content String
  country String
  city String
  startDate DateTime
  endDate DateTime
  createdAt DateTime @default(now())
  isDeleted Boolean @default(false)
  totalBudget Decimal? // bener nggak ya decimal
  image String?
  
  // relation
  authorId String
  author User @relation(fields: [authorId], references: [id])
}
